generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactMessage {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model AnonymousDocument {
  id            String          @id @default(uuid())
  documentUrl   String          @unique
  publicId      String
  documentName  String
  textLength    Int?
  tokenCount    Int?
  createdAt     DateTime        @default(now())
  quizzes       GeneratedQuiz[]
}

// GeneratedQuiz contains all quiz questions.
model GeneratedQuiz {
  id               String              @id @default(uuid())
  documentId       String
  totalQuestions   Int
  createdAt        DateTime            @default(now())
  document         AnonymousDocument   @relation(fields: [documentId], references: [id], onDelete: Cascade)
  questions        GeneratedQuestion[]
}

// Contains a single quiz question.
model GeneratedQuestion {
  id              String   @id @default(uuid())
  quizId          String
  question        String
  questionNumber  Int
  options         String[]
  correctAnswer   Int
  explanation     String

  quiz            GeneratedQuiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}
